<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fish.cloud.repo.SysDicKvMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.fish.cloud.bean.model.SysDicKv">
		<id column="id" property="id" />
		<result column="dic_code" property="dicCode" />
		<result column="key" property="key" />
		<result column="value" property="value" />
		<result column="remark" property="remark" />
		<result column="shop_id" property="shopId" />
		<result column="status" property="status" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
	</resultMap>

	<!-- 通过字典code获取字典数据 -->
	<select id="getTextTextByDicCodeAndKey" parameterType="String"  resultType="String">
		select top 1 `value` from cloud_sys_dic_kv
		where dic_code = #{dicCode} and key = #{key}
	</select>

	<!--通过查询指定table的 text code key 获取字典值-->
	<select id="getTextByTableAndCodeAndKey" parameterType="String"  resultType="String">
		select top 1 ${text} as 'text' from ${table} where ${code}= #{key}
	</select>

</mapper>
